.container
  .row
    .col-md-6.col-xs-6
      .form-group
        = form_for @cohort do |f|
          - if  f.object.errors.messages.length > 0
            / Renders errors to user
            - f.object.errors.messages.inspect
            %br/
            - f.object.errors.messages.each do |key, value|
              - value.each do |message|
                = key.capitalize
                = message
                %br/
              %br/
          = f.label :location_id, class: 'control-label'
          \:
          %br
          = f.collection_select :location_id, Location.all.each,:id,:name, include_blank: true, class: 'form-control'
          %br
          = f.label :course_id, class: 'control-label'
          \:
          %br
          = f.collection_select :course_id, Course.all.each,:id,:title, include_blank: true, class: 'form-control'
          %br
          = f.label :start_date, class: 'control-label'
          \:
          %br
          = f.date_field :start_date, class: 'form-control'
          %br
          = f.submit