- @cohorts.each do |cohort|
  .col-md-12
    - if current_user.try(:admin?)
      = link_to "Edit", edit_location_cohort_path(cohort.location, cohort), :class=> "btn btn-info btn-xs"
      = link_to "Delete", location_cohort_path(cohort.location, cohort), method: :delete, :class=>"btn btn-danger btn-xs"
    %strong
      = link_to cohort.course.title, location_cohort_path(cohort.location, cohort)
    %em
      = cohort.course.description
      = cohort.start_date
    = link_to cohort.location.name, location_path(cohort.location)
.col-md-12
  - if current_user.try(:admin?)
    = link_to "New Cohort", new_location_cohort_path, :class=>"btn btn-default btn-xs"
  = link_to "Back", root_path, :class=>"btn btn-default btn-xs"