.container
  .row
    .col-md-6
      .form-group
        = form_for @location do |f|
          = f.label :name, class: 'control-label'
          = f.text_field :name, class: 'form-control'
          %br
          = f.label :address, class: 'control-label'
          = f.text_field :address, class: 'form-control'
          %br
          = f.submit