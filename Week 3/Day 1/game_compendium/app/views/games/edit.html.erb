<h2>Edit a Game in the Compendium!</h2>

<%= form_for @game do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <br>
  <%= f.label :description, "Provide a brief description." %>
  <%= f.text_field :description%>
  <br>
  <%= f.submit "Catalog this Game!"%><br>
  <%= link_to "Back", root_path%>

<% end %>