<%= link_to "Back", root_path%>

<%= form_for @game do |f| %>
  <% if  f.object.errors.messages.length > 0 %>
  <!-- Renders errors to user -->
  <% f.object.errors.messages.inspect%>
  <br>
    <% f.object.errors.messages.each do |key, value| %>
    <% value.each do |message| %>
    <%= key.capitalize %> <%= message%>
    <br>
    <% end %>
    <br>
    <% end %>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <br>
  <%= f.label :description, "Provide a brief description." %>
  <%= f.text_field :description%>
  <br>
  <%= f.submit "Catalog this Game!"%>

<% end %>